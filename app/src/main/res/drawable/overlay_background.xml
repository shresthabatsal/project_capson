<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional shadow (works only on Lollipop+ via elevation or use cardview) -->
    <!-- For simple shadow-like effect, you can use a stroke with a light gray color -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Optional padding -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
